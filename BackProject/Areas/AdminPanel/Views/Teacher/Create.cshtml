@model Teachers;

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-Name">Create Teacher</h4>
            <p class="card-Degree">
                Teacher Form
            </p>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" id="exampleInputUsername1" placeholder="Name...">
                    <span asp-validation-for="Name"></span>
                </div>

                <div class="form-group" enctype="multipart/form-data">
                    <label asp-for="Image">Image</label>
                    <input asp-for="Image" class="form-control" id="exampleInputUsername1" accept="image/*" placeholder="Image...">
                    <span asp-validation-for="Image"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Degree">Degree</label>
                    <input asp-for="Degree" class="form-control" id="exampleInputEmail1" placeholder="Degree...">
                </div>

                <button type="submit" class="btn btn-primary mr-2">Create</button>
                <button asp-action="index" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>
